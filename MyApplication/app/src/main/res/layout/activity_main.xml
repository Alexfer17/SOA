<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="278dp"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="0.01">

        <TextView
            android:text="Circuito 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginRight="36px"
            android:layout_weight="0.00" />

        <Button
            android:background="@drawable/toggle_off"
            android:layout_width="117dp"
            android:layout_height="61dp"
            android:id="@+id/btnConsumo1" />


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="278dp"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="0.01">

        <TextView
            android:text="Circuito 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginRight="36px"
            android:layout_weight="0.00" />

        <Button
            android:background="@drawable/toggle_off"
            android:layout_width="117dp"
            android:layout_height="61dp"
            android:id="@+id/btnConsumo2" />


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="278dp"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="0.01">

        <TextView
            android:text="Circuito 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginRight="36px"
            android:layout_weight="0.00" />

        <Button
            android:background="@drawable/toggle_off"
            android:layout_width="117dp"
            android:layout_height="61dp"
            android:id="@+id/btnConsumo3" />


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="278dp"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="0.01">

        <TextView
            android:text="Circuito 4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginRight="36px"
            android:layout_weight="0.00" />

        <Button
            android:background="@drawable/toggle_off"
            android:layout_width="117dp"
            android:layout_height="61dp"
            android:id="@+id/btnConsumo4" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="278dp"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="0.01">
    <TextView
        android:text="Consumo Total"
        android:layout_width="142dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="0 Volt"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/txtConsumo" />
    </LinearLayout>

    <TextView
        android:text="Cargando..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars = "vertical"
        android:layout_marginTop="20px"
        android:id="@+id/txtResultado" />

    <Button
        android:text="Configuracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:id="@+id/btnconfig" />


</LinearLayout>
